<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :user_type %><br>
    <%= f.radio_button :user_type, 1 %>
    <%= f.label :user_type, "Producer", :value => 1 %><br>
    <%= f.radio_button :user_type, 2 %>
    <%= f.label :user_type, "Distributor", :value => 2 %><br>
    <%= f.radio_button :user_type, 3 %>
    <%= f.label :user_type, "Pharmacy", :value => 3 %><br>
    <%= f.radio_button :user_type, 4, :checked => true %>
    <%= f.label :user_type, "Customer", :value => 4 %>
    
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
